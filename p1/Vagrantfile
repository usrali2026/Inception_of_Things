Vagrant.configure("2") do |config|
  config.vm.box         = "generic/ubuntu2404"
  config.vm.box_version = ">= 4.2.8"

  config.ssh.insert_key = false
  config.vm.synced_folder ".", "/vagrant", type: "rsync", rsync__auto: true

  config.vm.provider "virtualbox" do |vb|
    vb.cpus   = 1
    vb.memory = 1024   # or 512 if you want
  end

  config.vm.define "alrahmouS" do |m|
    m.vm.hostname = "alrahmouS"
    m.vm.network "private_network", ip: "192.168.56.110"
    m.vm.provision "shell", path: "scripts/setup_server.sh"
  end

  config.vm.define "alrahmouSW" do |m|
    m.vm.hostname = "alrahmouSW"
    m.vm.network "private_network", ip: "192.168.56.111"
    m.vm.provision "shell", path: "scripts/setup_worker.sh"
  end
end
