# p2/Vagrantfile
# -*- mode: ruby -*-
Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2204"

  config.vm.define "alrahmouS" do |vm|
    vm.vm.hostname = "alrahmouS"
    vm.vm.network "private_network", ip: "192.168.56.110"

    vm.vm.synced_folder "./confs", "/vagrant/confs", type: "rsync"
    vm.vm.provider :libvirt do |lv|
      lv.memory = 2048   # you can drop to 1024 if needed
      lv.cpus   = 1
      lv.machine_type = "pc"
      lv.graphics_type = "vnc"
      lv.video_type = "qxl"
    end

    # Basic tools
    vm.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y
      sudo apt-get install -y curl
    SHELL

    # Install K3s and deploy apps + ingress
    vm.vm.provision "shell", path: "scripts/install_k3s_and_apps.sh"
  end
end
